{
    "name": "MagyarAnimeTweaks",
    "description": "Egy kis segítség a MagyarAnime.eu oldalhoz.",
    "manifest_version": 3,
    "version": "0.1.3",
    "permissions": ["tabs", "storage", "activeTab", "declarativeNetRequest"],
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "ruleset_1",
                "path": "block_rules.json",
                "enabled": true
            },
            {
                "id": "ruleset_2",
                "path": "allow_rules.json",
                "enabled": false
            }
        ]
    },
    "author": "TTK987",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["*://magyaranime.eu/*"],
            "js": ["content.js", "player.js"],
            "css": ["player.css"],
            "all_frames": true,
            "run_at": "document_start"
        },
        {
            "matches": ["*://embed.indavideo.hu/*"],
            "js": ["indavideo.js"],
            "all_frames": true,
            "run_at": "document_end"
        }
    ]
}
